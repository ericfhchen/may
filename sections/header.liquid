<header class="site-header">
  <div class="container">
    <div class="site-header__content">
      <div class="site-header__logo-container">
        {% if section.settings.logo != blank %}
          <a href="/" class="site-header__logo">
            {% assign logo_alt = section.settings.logo.alt | default: shop.name %}
            {{ section.settings.logo | image_url: width: 150 | image_tag: alt: logo_alt, class: 'site-header__logo-image' }}
          </a>
        {% else %}
          <a href="/" class="site-header__logo site-header__logo-text">
            {{ shop.name }}
          </a>
        {% endif %}
      </div>

      <nav class="site-nav" role="navigation">
        <ul class="site-nav__list">
          {% for link in section.settings.menu.links %}
            <li class="site-nav__item">
              <a href="{{ link.url }}" class="site-nav__link{% if link.active %} site-nav__link--active{% endif %}">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>

      <div class="site-header__icons">
        <a href="/search" class="site-header__icon">
          <span class="visually-hidden">{{ 'general.search.title' | t }}</span>
          <svg aria-hidden="true" focusable="false" width="20" height="20" viewBox="0 0 20 20">
            <path d="M8 14A6 6 0 1 0 8 2a6 6 0 0 0 0 12zm6.32-1.094l3.58 3.58a1 1 0 1 1-1.415 1.413l-3.58-3.58a8 8 0 1 1 1.414-1.414z" fill="currentColor"/>
          </svg>
        </a>
        
        <a href="/account" class="site-header__icon">
          <span class="visually-hidden">{{ 'customer.account.title' | t }}</span>
          <svg aria-hidden="true" focusable="false" width="20" height="20" viewBox="0 0 20 20">
            <path d="M10 11a5 5 0 1 0 0-10 5 5 0 0 0 0 10zm0 2a7 7 0 0 0-7 7h14a7 7 0 0 0-7-7z" fill="currentColor"/>
          </svg>
        </a>
        
        <a href="/cart" class="site-header__icon site-header__cart">
          <span class="visually-hidden">{{ 'cart.general.title' | t }}</span>
          <svg aria-hidden="true" focusable="false" width="20" height="20" viewBox="0 0 20 20">
            <path d="M4 2h16l-3 10H7L4 2zm3 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm9 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4z" fill="currentColor"/>
          </svg>
          <span class="site-header__cart-count">{{ cart.item_count }}</span>
        </a>
        
        <button type="button" class="site-header__icon mobile-menu-toggle" aria-expanded="false" aria-controls="mobile-menu">
          <span class="visually-hidden">{{ 'general.navigation.menu' | t }}</span>
          <svg aria-hidden="true" focusable="false" width="20" height="20" viewBox="0 0 20 20">
            <path d="M3 4h14a1 1 0 0 1 0 2H3a1 1 0 1 1 0-2zm0 5h14a1 1 0 0 1 0 2H3a1 1 0 0 1 0-2zm0 5h14a1 1 0 0 1 0 2H3a1 1 0 0 1 0-2z" fill="currentColor"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <div class="mobile-menu" id="mobile-menu">
    <div class="container">
      <ul class="mobile-menu__list">
        {% for link in section.settings.menu.links %}
          <li class="mobile-menu__item">
            <a href="{{ link.url }}" class="mobile-menu__link{% if link.active %} mobile-menu__link--active{% endif %}">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 150
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ],
  "presets": [
    {
      "name": "Header",
      "category": "Header"
    }
  ]
}
{% endschema %} 