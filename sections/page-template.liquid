<div class="page-container container">

  <div class="page-content rte">
    {{ page.content }}
  </div>
</div>

<style>
  .page-container {
    max-width: 100%;
    padding: 5rem 0.5rem 5rem 0.5rem;
    min-height: calc(100svh - 3rem);
    display: flex;
    align-items: center;
  }
  
  .page-header {
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .page-title {
    font-size: 2.5rem;
    line-height: 1.2;
  }
  
  .page-content {
    font-size: 1rem;
    line-height: 1.6;
  }
  
  /* Style for rich text elements */
  
  .rte h1, 
  .rte h2, 
  .rte h3, 
  .rte h4, 
  .rte h5, 
  .rte h6 {
    margin-top: 2em;
    margin-bottom: 1em;
  }
  
  .rte p {
    margin-bottom: 1.5em;
  }
  
  .rte ul, 
  .rte ol {
    padding-left: 2em;
    margin-bottom: 1.5em;
  }
  
  .rte img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 2em auto;
  }
  
  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }
    
    .page-content {
      font-size: 0.9rem;
    }
  }
</style>

{% schema %}
{
  "name": "Page",
  "settings": []
}
{% endschema %} 