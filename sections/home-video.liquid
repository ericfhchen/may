<div class="video-container">
  <div class="container">
    <div class="video-wrapper">
      {% if section.settings.video_url != blank %}
        <video class="video"
          autoplay 
          muted 
          loop
          playsinline
        >
          <source src="{{ section.settings.video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% else %}
        <!-- Placeholder for when no video is uploaded -->
        <div class="video-placeholder">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .video-container {
    width: 100%;
    overflow: hidden;
  }
  
  .video-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
  }
  
  .video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .video-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .placeholder-svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }
</style>

{% schema %}
{
  "name": "Home Video",
  "settings": [
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "default": "https://cdn.shopify.com/videos/c/o/v/65c29df57278420c8c38885ededa28b5.mp4",
      "info": "Enter the full URL to an MP4 video file"
    }
  ],
  "presets": [
    {
      "name": "Basic Video",
      "category": "Media"
    }
  ]
}
{% endschema %} 