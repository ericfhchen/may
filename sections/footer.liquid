<footer class="site-footer">
      
      <div class="site-footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} MAY
      </div>
      
      {% if section.settings.show_newsletter %}
        <div class="site-footer__column site-footer__column--newsletter">
        
          {% form 'customer', class: 'newsletter-form' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper">
              <input
                type="email"
                name="contact[email]"
                id="NewsletterEmail"
                class="newsletter-form__field"
                value="{{ form.email }}"
                placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
                required
              >
              <div class="newsletter-form__button-wrapper">
              <button type="submit" class="hover-dot newsletter-form__button btn" name="commit">
                {{ 'general.newsletter_form.submit' | t }}
              </button>
              </div>
            </div>
            {% if form.errors %}
              <div class="newsletter-form__error">{{ form.errors.messages['email'] }}</div>
            {% endif %}
            {% if form.posted_successfully? %}
              <div class="newsletter-form__success">{{ 'general.newsletter_form.confirmation' | t }}</div>
            {% endif %}
          {% endform %}
        </div>
      {% endif %}

      <div class="site-footer__terms">
        <a class="hover-dot" href="/pages/terms-and-privacy">Terms / Privacy </a>
      </div>

</footer>

<style>
  .site-footer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0.5rem;
    align-items: center;
  }

  .newsletter-form__field {
    border: none;
    outline: none;
    font-size: 0.75rem;
    border-bottom: 1px solid #000;
    padding: 0.5rem;
    font-family: 'May Grotesk', sans-serif !important;
    background: none;
  }
  .newsletter-form__field-wrapper {
    display: flex;
    align-items: center;
  }

  .newsletter-form__button-wrapper {
    position: relative;
  }

  .newsletter-form__field:focus {
    background-color: transparent;
    outline: none;
  }

  .newsletter-form__field:-webkit-autofill,
  .newsletter-form__field:-webkit-autofill:hover,
  .newsletter-form__field:-webkit-autofill:focus {
    -webkit-box-shadow: 0 0 0px 1000px transparent inset;
    transition: background-color 5000s ease-in-out 0s;
    -webkit-text-fill-color: var(--text-color);
  }

  .newsletter-form__button {
    font-size: 0.75rem;
    padding: 0.5rem 0.5rem;
    font-family: 'May Grotesk', sans-serif !important;
    background: none;
    color: #000;
  }

  .newsletter-form__button:hover {
    background: none;
    color: #000;
    cursor: pointer;
  }

  .site-footer__terms {
    position: relative;
  }

  .site-footer__terms a {
    color: var(--text-color);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .site-footer {
      flex-direction: row;
      justify-content: space-between;
      font-size: 0.6rem;
    }

    .newsletter-form__field {
      font-size: 0.6rem;
      padding: 0.2rem 0.2rem;
    }

    .newsletter-form__button {
      font-size: 0.6rem;
    }

  
  }


</style>

