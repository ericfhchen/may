<div class="terms-page-container">
  <div class="terms-page-header">
    <h1 class="terms-page-title">{{ page.title }}</h1>
  </div>
  
  <div class="terms-page-content rte">
    {{ page.content }}
  </div>
</div>

<style>
  .terms-page-container {
    max-width: 100%;
    padding: 5rem 1rem;
    font-family: var(--font-family);
  }
  
  .terms-page-header {
    margin-bottom: 3rem;
    text-align: center;
  }
  
  .terms-page-title {
    font-size: 3.5rem;
    line-height: 1.1;
    font-weight: bold;
    color: var(--primary-color);
    position: relative;
    display: inline-block;
  }
  
  .terms-page-title:after {
    content: '';
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 3px;
    background-color: var(--primary-color);
  }
  
  .terms-page-content {
    font-size: 1.15rem;
    line-height: 1.8;
    max-width: 800px;
    margin: 0 auto;
    color: var(--primary-color);
  }
  
  /* Style for rich text elements */
  .rte h1, 
  .rte h2, 
  .rte h3 {
    margin-top: 2em;
    margin-bottom: 1em;
    color: var(--primary-color);
  }
  
  .rte h2 {
    font-size: 2.2rem;
    line-height: 1.3;
  }
  
  .rte h3 {
    font-size: 1.8rem;
    line-height: 1.3;
  }
  
  .rte p {
    margin-bottom: 1.8em;
  }
  
  .rte a {
    text-decoration: none;
    color: var(--primary-color);
    position: relative;
    display: inline-block;
  }
  
  .rte a:after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }
  
  .rte a:hover:after {
    transform: scaleX(1);
    transform-origin: left;
  }
  
  .rte ul, 
  .rte ol {
    padding-left: 2em;
    margin-bottom: 1.8em;
  }
  
  .rte li {
    margin-bottom: 0.5em;
  }
  
  .rte img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 3em auto;
    border-radius: 4px;
  }
  
  .rte blockquote {
    border-left: 3px solid var(--primary-color);
    padding-left: 1.5em;
    margin-left: 0;
    margin-right: 0;
    font-style: italic;
    color: rgba(var(--primary-color-rgb), 0.8);
  }
  
  /* Additional styling for terms/privacy content */
  .rte h4 {
    font-size: 1.4rem;
    margin-top: 2em;
    margin-bottom: 1em;
    color: var(--primary-color);
  }
  
  .rte table {
    width: 100%;
    border-collapse: collapse;
    margin: 2em 0;
  }
  
  .rte table th,
  .rte table td {
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    text-align: left;
  }
  
  .rte table th {
    background-color: rgba(var(--primary-color-rgb), 0.05);
    font-weight: bold;
  }
  
  .rte table tr:nth-child(even) {
    background-color: rgba(var(--primary-color-rgb), 0.02);
  }
  
  /* Two-column layout for wide screens */
  @media (min-width: 1024px) {
    .terms-page-content.has-columns {
      column-count: 2;
      column-gap: 3rem;
    }
    
    .terms-page-content.has-columns h2,
    .terms-page-content.has-columns h3,
    .terms-page-content.has-columns h4,
    .terms-page-content.has-columns table {
      column-span: all;
    }
  }
  
  @media (max-width: 768px) {
    .terms-page-container {
      padding: 3rem 1rem;
    }
    
    .terms-page-title {
      font-size: 2.5rem;
    }
    
    .terms-page-content {
      font-size: 1rem;
      line-height: 1.6;
    }
    
    .rte h2 {
      font-size: 1.8rem;
    }
    
    .rte h3 {
      font-size: 1.5rem;
    }
    
    .rte h4 {
      font-size: 1.2rem;
    }
  }
  
  @media (max-width: 480px) {
    .terms-page-container {
      padding: 2rem 1rem;
    }
    
    .terms-page-title {
      font-size: 2rem;
    }
    
    .terms-page-content {
      font-size: 0.9rem;
    }
  }
</style>

{% schema %}
{
  "name": "Terms & Privacy Page",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_columns",
      "label": "Enable two-column layout on desktop",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Terms & Privacy Page",
      "category": "Page"
    }
  ]
}
{% endschema %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const content = document.querySelector('.terms-page-content');
  if (content && {{ settings.enable_columns | json }}) {
    content.classList.add('has-columns');
  }
});
{% endjavascript %} 