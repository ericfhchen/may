<div class="password-page">
  <div class="password-page__container">
    {% comment %} Logo centered at top {% endcomment %}
    <div class="password-page__logo">
      <img 
        src="{{ 'may-logo.svg' | asset_url }}" 
        alt="{{ shop.name }}" 
        class="password-page__logo-image"
      >
    </div>



    {% comment %} Password form styled like footer email field {% endcomment %}
    <div class="password-page__form-wrapper">
        {% comment %} Customizable text above password form {% endcomment %}
      {% if settings.password_text != blank %}
        <div class="password-page__text">
        {{ settings.password_text }}
        </div>
      {% endif %}
      {% form 'storefront_password', class: 'password-form' %}
        <div class="password-form__field-wrapper">
          <input
            type="password"
            name="password"
            id="Password"
            class="password-form__field newsletter-form__field"
            placeholder="{{ settings.password_placeholder | default: 'Enter password for access' }}"
            autocomplete="current-password"
            required
          >
          <div class="password-form__button-wrapper newsletter-form__button-wrapper">
            <button type="submit" class="hover-dot password-form__button newsletter-form__button btn" name="commit">
              {{ 'general.password_page.login_form_submit' | t }}
            </button>
          </div>
        </div>
        {% if form.errors %}
          <div class="password-form__error newsletter-form__error">
            {{ form.errors | first }}
          </div>
        {% endif %}
      {% endform %}
    </div>
  </div>
</div>

<style>

  .password-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
    background-color: var(--background-color);
  }

  .password-page__container {
    width: 100%;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    flex: 1;
    padding-top: 0;
  }

  .password-page__logo {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 0;
    padding-top: 0;
  }

  .password-page__logo-image {
    display: block;
    width: auto;
    height: auto;
    max-width: 200px;
  }

  .password-page__shop-name {
    font-family: var(--font-family);
    font-size: 2rem;
    color: var(--text-color);
    margin: 0;
  }

  .password-page__text {
    text-align: center;
    font-family: var(--font-family);
    color: var(--text-color);
    margin-bottom: 0;
  }

  .password-page__text + .password-page__form-wrapper {
    margin-top: 0.5rem;
  }

  .password-page__form-wrapper {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2rem;
    align-items: center;
    margin-top: auto;
    margin-bottom: auto;
  }

  .password-form {
    width: 100%;
    max-width: 400px;
  }

  .password-form__field-wrapper {
    display: flex;
    align-items: center;
  }

  .password-form__button-wrapper {
    position: relative;
  }

  .password-form__field {
    border: none;
    outline: none;
    font-size: 0.75rem;
    border-bottom: 1px solid #000;
    padding: 0.5rem;
    font-family: 'May Grotesk', sans-serif !important;
    background: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    border-radius: 0;
    flex: 1;
  }

  .password-form__field:focus {
    background-color: transparent;
    outline: none;
  }

  .password-form__field:-webkit-autofill,
  .password-form__field:-webkit-autofill:hover,
  .password-form__field:-webkit-autofill:focus {
    -webkit-box-shadow: 0 0 0px 1000px transparent inset;
    transition: background-color 5000s ease-in-out 0s;
    -webkit-text-fill-color: var(--text-color);
    border-radius: 0;
  }

  .password-form__button {
    font-size: 0.75rem;
    padding: 0.5rem 0.5rem;
    font-family: 'May Grotesk', sans-serif !important;
    background: none;
    color: #000;
  }

  .password-form__button:hover {
    background: none;
    color: #000;
    cursor: pointer;
  }

  .password-form__error {
    margin-top: 0.5rem;
    color: red;
    font-size: 0.75rem;
    font-family: 'May Grotesk', sans-serif;
  }

  @media (max-width: 768px) {
    .password-page {
      padding: 1rem;
    }

    .password-page__container {
      gap: 2rem;
    }

    .password-page__logo-image {
      max-width: 150px;
    }

    .password-form__field {
      font-size: 0.6rem;
      padding: 0.2rem 0.2rem;
    }

    .password-form__button {
      font-size: 0.6rem;
    }
  }
</style>

